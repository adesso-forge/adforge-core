{
  "name": "@adesso-forge/core-ds",
  "version": "1.0.0",
  "description": "Core design system layer for adesso forge â€” extends Web Awesome with forge-* prefix",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./themes/shared": "./dist/themes/shared.css",
    "./themes/light": "./dist/themes/light.css",
    "./themes/dark": "./dist/themes/dark.css",
    "./components/*": "./dist/components/*/index.js"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "vite build && pnpm build:types && pnpm build:themes",
    "build:types": "tsc --emitDeclarationOnly",
    "build:themes": "mkdir -p dist/themes && cp src/themes/*.css dist/themes/",
    "type-check": "tsc --noEmit",
    "dev": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint src/",
    "clean": "rm -rf dist/"
  },
  "dependencies": {
    "@awesome.me/webawesome": "^3.2.0",
    "lit": "^3.2.0"
  },
  "devDependencies": {
    "@adesso-forge/ds-shared": "link:../ds-shared",
    "@storybook/addon-a11y": "^8.6.0",
    "@storybook/addon-essentials": "^8.6.0",
    "@storybook/web-components": "^8.6.17",
    "@storybook/web-components-vite": "^8.6.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "storybook": "^8.6.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
