{
  "name": "@adesso-forge/adforge-core",
  "version": "1.1.7",
  "description": "Core design system layer for adesso forge â€” extends Web Awesome with forge-* prefix",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./themes/shared": "./dist/themes/shared.css",
    "./themes/light": "./dist/themes/light.css",
    "./themes/dark": "./dist/themes/dark.css",
    "./tokens/scss": "./dist/tokens/variables.scss",
    "./tokens/ts": "./dist/tokens/tokens.ts",
    "./tokens/json": "./dist/tokens/tokens.json",
    "./components/*": "./dist/components/*/index.js"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "vite build && pnpm build:types && pnpm build:themes && pnpm tokens:build",
    "build:types": "tsc --emitDeclarationOnly",
    "build:themes": "mkdir -p dist/themes && cp src/themes/*.css dist/themes/",
    "tokens:build": "node scripts/build-tokens.mjs",
    "type-check": "tsc --noEmit",
    "dev": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "clean": "rm -rf dist/"
  },
  "dependencies": {
    "@awesome.me/webawesome": "^3.2.1",
    "lit": "^3.3.2"
  },
  "devDependencies": {
    "@adesso-forge/adforge-shared": "1.2.4",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@storybook/addon-a11y": "^10.0.0",
    "@storybook/addon-docs": "^10.0.0",
    "@storybook/web-components-vite": "^10.0.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "eslint": "^9.0.0",
    "happy-dom": "^16.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "semantic-release": "^25.0.0",
    "storybook": "^10.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ],
    "overrides": {
      "@adesso-forge/adforge-shared": "link:../adforge-shared"
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adesso-forge/adforge-core.git"
  }
}
